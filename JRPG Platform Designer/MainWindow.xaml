<Window x:Class="JRPG_Platform_Designer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:JRPG_Platform_Designer"
        mc:Ignorable="d" WindowStartupLocation="CenterScreen" ResizeMode="CanMinimize"
        Title="Platform Designer" Height="650" Width="1200">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!--Load game datafiles-->
        <StackPanel Orientation="Horizontal" Margin="10" VerticalAlignment="Center" HorizontalAlignment="Center">
            <StackPanel Margin="5">
                <TextBlock x:Name="TxtTileStatus" Text="Not Loaded X" Margin="0 5" FontWeight="Bold"/>
                <Button x:Name="BtnTiles" Content="Load Tiles" Click="BtnTiles_Click"/>
            </StackPanel>
        </StackPanel>
        
        <!--Create Platform-->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1.5*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <!--Live preview of platform-->
            <Grid x:Name="PlatformPreview" Background="Gray"></Grid>
            
            <!--Control box-->
            <StackPanel Grid.Column="1" Margin="10">
                <!--Platform Properties-->
                <GroupBox x:Name="PlatformPropertiesPanel" Header="Platform Properties" Margin="10" MouseDown="GroupBox_MouseDown">
                    <StackPanel>
                        <TextBlock Text="Name:" Margin="5"/>
                        <TextBox x:Name="TxtName" Text="Test123" Margin="10 5" Padding="1"/>
                        <Grid Margin="5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel Margin="0 0 5 0">
                                <TextBlock Text="Columns:" Margin="5"/>
                                <TextBox x:Name="TxtColumns" Text="4" Margin="10 5" Padding="1"/>
                            </StackPanel>
                            <StackPanel Grid.Column="1">
                                <TextBlock Text="rows:" Margin="5"/>
                                <TextBox x:Name="TxtRows" Text="4" Margin="10 5" Padding="1"/>
                            </StackPanel>
                        </Grid>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="5">
                            <Button Content="Apply" Click="ApplyPlatformProperties" Margin="5" Width="120"/>
                            <Image x:Name="PropertiesStatusIcon" Height="32" Width="32" Source="Icons/alert.png" Margin="10 0"/>
                        </StackPanel>
                    </StackPanel>
                </GroupBox>

                <!--Platform Tiles-->
                <GroupBox Header="Tiles" Margin="10">
                    <StackPanel Orientation="Horizontal" Margin="5">
                        <TextBlock Text="Tile:" Margin="5"/>
                        <ComboBox x:Name="ComboboxTiles" Margin="10 5" Padding="2" MinWidth="150" SelectedIndex="0"/>
                    </StackPanel>
                </GroupBox>
                
                <!--Save platform-->
                <GroupBox Header="Export" Margin="10">
                    <Button Content="Export platform" Width="100" Click="ExportPlatform"/>
                </GroupBox>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
